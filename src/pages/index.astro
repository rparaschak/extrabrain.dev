---
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

import heroImage from '~/assets/images/hero-image.png';

const metadata = {
  title: 'Roman Parashchak - AI Development Consulting',
  description:
    'CTO at Agewise building AI-powered products. Consultant helping engineering teams adopt AI-assisted workflows.',
  ignoreTitleTemplate: true,
  openGraph: {
    type: 'website',
    url: 'https://extrabrain.dev/',
    title: 'Roman Parashchak - AI Development Consulting',
    description:
      'CTO at Agewise building AI-powered products. Consultant helping engineering teams adopt AI-assisted workflows.',
    images: [
      {
        url: '~/assets/images/og-image.png',
      },
    ],
  },
};

const advisoryItems = [
  {
    title: 'AI-Assisted Dev Strategy',
    description: 'Help your team ship faster with modern AI tooling',
    icon: 'tabler:brain',
  },
  {
    title: 'Process Optimization',
    description: 'Streamline your workflow for faster, predictable releases',
    icon: 'tabler:arrows-shuffle',
  },
  {
    title: 'AI Product Integration',
    description: "Understand what AI can (and can't) do for your product",
    icon: 'tabler:puzzle',
  },
];

const handsOnItems = [
  {
    title: 'Technical Audit',
    description: 'Get a clear picture of your codebase with actionable next steps',
    icon: 'tabler:file-search',
  },
  {
    title: 'End-to-End Development',
    description: 'I take it from idea to production',
    icon: 'tabler:code',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="relative md:-mt-[76px] not-prose">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
      <div class="pt-0 md:pt-[76px]"></div>
      <div class="py-12 md:py-16 lg:flex lg:items-center lg:gap-12">
        <!-- Text Content -->
        <div class="basis-1/2 text-center lg:text-left pb-10 md:pb-0">
          <h1 class="text-4xl md:text-5xl font-bold leading-tight tracking-tighter mb-4 font-heading dark:text-gray-200">
            Hey, I'm <span class="text-accent">Roman</span>
          </h1>
          <p class="text-xl text-muted mb-8 dark:text-slate-300">
            I've spent 15 years building software, leading teams, and helping companies ship better products. 
            Right now, I'm all-in on Agentic Engineering — practicing it daily at Agewise and with teams I coach.
          </p>

          <!-- What I Currently Do -->
          <div class="text-left">
            <p class="text-sm font-semibold text-secondary uppercase tracking-wide mb-4">What I currently do</p>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <span class="relative flex h-2 w-2 mt-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-500 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                </span>
                <div>
                  <p class="font-semibold">CTO at Agewise</p>
                  <p class="text-muted">Building an AI-powered product for Senior Living. Practicing AI-Assisted development daily.</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <span class="relative flex h-2 w-2 mt-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-500 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
                </span>
                <div>
                  <p class="font-semibold">Consultant & Coach</p>
                  <p class="text-muted">Helping engineering teams strategically adopt AI in their development workflows.</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class="basis-1/2">
          <div class="relative m-auto max-w-md lg:max-w-none">
            <Image
              class="mx-auto rounded-md w-full"
              widths={[400, 768]}
              sizes="(max-width: 767px) 400px, 768px"
              loading="eager"
              width={500}
              height={500}
              src={heroImage}
              alt="Roman Parashchak"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <p class="text-sm font-semibold text-secondary uppercase tracking-wide mb-8 text-center">How I can help</p>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Advisory -->
        <div>
          <h3 class="text-2xl font-bold mb-6">Advisory</h3>
          <div class="space-y-5">
            {advisoryItems.map((item) => (
              <div class="flex items-start gap-4">
                <div class="w-2 h-2 bg-accent rounded-full flex-shrink-0 mt-2"></div>
                <div>
                  <h4 class="text-lg font-semibold mb-1">{item.title}</h4>
                  <p class="text-muted">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Hands-On -->
        <div>
          <h3 class="text-2xl font-bold mb-6">Hands-On</h3>
          <div class="space-y-5">
            {handsOnItems.map((item) => (
              <div class="flex items-start gap-4">
                <div class="w-2 h-2 bg-accent rounded-full flex-shrink-0 mt-2"></div>
                <div>
                  <h4 class="text-lg font-semibold mb-1">{item.title}</h4>
                  <p class="text-muted">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 md:py-16">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-4xl font-bold tracking-tighter mb-4 font-heading">Book a Free Call</h2>
      <p class="text-xl text-muted mb-6">
        I don't hold back — you'll leave with real answers, not a sales pitch.
      </p>
      <Button
        variant="primary"
        text="Schedule a Call"
        href="https://calendly.com/roman-parashchak/45min"
        target="_blank"
      />
    </div>
  </section>
</Layout>
