---
import { Code } from 'astro:components';
import type { CodeLanguage } from 'astro';

interface Props {
  before: string;
  after: string;
  lang?: CodeLanguage;
}

const { before, after, lang = 'go' } = Astro.props;
---

<div
  class="not-prose grid grid-cols-1 sm:grid-cols-2 gap-2 my-4 ml-4 [&>pre]:m-0 [&>pre]:h-full [&>pre]:p-4 [&>pre]:rounded-md"
>
  <Code code={before} lang={lang} />
  <Code code={after} lang={lang} />
</div>
